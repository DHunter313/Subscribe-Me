@model IEnumerable<SubscribeMe.Models.Messages>

@{
    ViewBag.Title = "Index";
}

<h1>Index of Messages Sent</h1>

<p>
    <button>@Html.ActionLink("Create New Message", "Create")</button>
</p>
<p>
    <button> @Html.ActionLink("Download as XML", "Download")</button>
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.SentDate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ToNumber)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ToName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.MessageSent)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.SentDate)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ToNumber)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ToName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.MessageSent)
        </td>
        <td>
            @Html.ActionLink("Details", "Details", new { id=item.Id }) |
        </td>
    </tr>
}

</table>
