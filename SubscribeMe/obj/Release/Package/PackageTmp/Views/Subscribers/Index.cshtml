@model IEnumerable<SubscribeMe.Models.Subscribers>

@{
    ViewBag.Title = "Index";
}

<h2>List of Current Subscribers</h2>

<p>
    <button>@Html.ActionLink("Sign up for Messages", "Create")</button>
</p>
<p>
    <button> @Html.ActionLink("Download as XML", "Download")</button>
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Number)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DateSubscribed)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Number)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.DateSubscribed)
        </td>
        <td>
            @Html.ActionLink("Details", "Details", new { id=item.Id }) |
        </td>
    </tr>
}

</table>
